{{#with post}}
<article class="post post--text">
    <header class="post-header">
        <h2>{{title}}</h2>
    </header>
    <section class="post-content">
        {{#if cover}}
          <a href="{{cover}}">
            <img
                class="post-cover {{#if coverShape}}shape-{{coverShape}}{{/if}}"
                {{#if coverPosition}}
                style="--cover-position: {{coverPosition}};"
                {{/if}}
                src="{{cover}}"
                alt="{{coverAlt}}">
          </a>
        {{/if}}
        {{> @partial-block .. }}
    </section>
    {{>pages/post/footer}}
</article>
{{/with}}
