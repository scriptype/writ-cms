{{#>base page="homepage"}}

  <style>
    .collection-header {
      display: flex;
      gap: .8em;
      align-items: center;
    }

    .collection-facets {
      font-size: .8em;
      font-variant: small-caps;
    }

    .collection-entries-list {
      margin-top: 0;
    }
  </style>

  <h1>{{settings.site.title}}</h1>

  {{> @partial-block }}

  <h2>Pages</h2>
  <ul class="collection-entries-list">
    {{#each subpages as |subpage|}}
    <li><a href="{{subpage.permalink}}">{{subpage.title}}</a></li>
    {{/each}}
  </ul>

  <h2>Collections</h2>

  {{#each collections as |collection|}}

    <header class="collection-header">
      <h3><a href="{{collection.permalink}}">{{collection.title}}</a></h3>

      {{#if collection.facets.length}}
      <div class="collection-facets">
        <a href="{{collection.permalink}}/by">by</a>:
        {{#each collection.facets as |facet|}}
        <a href="{{facet.permalink}}">{{facet.title}}</a>
        {{/each}}
      </div>
      {{/if}}
    </header>

    <ul class="collection-entries-list">
        {{#each collection.posts as |post|}}
        <li><a href="{{post.permalink}}">{{post.title}}</a></li>
        {{/each}}
    </ul>

  {{/each}}

{{/base}}
