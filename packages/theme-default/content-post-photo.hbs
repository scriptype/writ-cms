{{#>m-doc}}
  theme/content-post-photo.hbs

  Content container for a photo post page.
  Displays title, the photo, exif, description and footer.
{{/m-doc}}
<main class="content" id="posts-container">
    <article class="post post--photo">
        <header class="post-header">
            <h2>{{title}}</h2>
        </header>
        <section class="post-content">
            <a href="{{originalUrl}}">
                <img src="{{mediumUrl}}" alt="a photo" />
            </a>
            <pre>{{exif}}</pre>
            {{> @partial-block }}
        </section>
        {{>content-post-footer}}
    </article>
</main>
