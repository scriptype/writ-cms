{{#>m-doc}}
  List of posts.
{{/m-doc}}
{{#each posts as |post|}}

  {{#if (is post.type 'photo')}}
    <a href="{{post.permalink}}" class="photo-thumbnail">
        <img src="{{post.permalink}}/{{post.thumbnailUrl}}" />
    </a>
  {{/if}}

  {{#if (is post.type 'text')}}
    <div class="post">
        <h2><a href="{{post.permalink}}">{{post.title}}</a></h2>
        {{{post.summary}}}
        <p><a href="{{post.category.permalink}}">{{post.category.name}}</a></p>
        <p>{{post.publishDateMedium}}</p>
    </div>
  {{/if}}

  {{#if (is post.type 'audio')}}
    <div class="post">
        <a href="{{post.permalink}}">
          <h2>{{post.title}}</h2>
          {{#if post.cover}}
            <img src="{{post.permalink}}/{{post.cover}}" alt="{{post.coverAlt}}">
          {{/if}}
        </a>
        {{{post.summary}}}
        <p><a href="{{post.category.permalink}}">{{post.category.name}}</a></p>
        <p>{{post.publishDateMedium}}</p>
    </div>
  {{/if}}

{{/each}}
