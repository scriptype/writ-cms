{{#> base }}
    <div class="container">
        <nav class="topbar">
            <h1 class="site-title">{{site.title}}</h1>
            {{>search}}

            <div class="categories">
                {{#each categories as |category|}}
                    <a href="{{category.permalink}}" class="categories-item">
                        {{category.name}}
                    </a>
                {{/each}}
            </div>
        </nav>

        <main class="content" id="posts-container">
            {{#each posts as |post|}}
                {{#if (isPostType 'text-post' post.type)}}
                    <div class="post">
                        <h2><a href="{{post.permalink}}">{{post.title}}</a></h2>
                        {{{post.summary}}}
                        <p><a href="{{post.category.permalink}}">{{post.category.name}}</a></p>
                        <p>{{post.publishedAtMedium}}</p>
                    </div>
                {{/if}}
            {{/each}}
        </main>
    </div>
{{/base}}
